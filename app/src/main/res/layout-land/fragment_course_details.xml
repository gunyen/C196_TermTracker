<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context=".UI.FragmentCourseDetails" android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="409dp"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="1dp"
            tools:layout_editor_absoluteX="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
    >
        <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:useDefaultMargins="true"
                android:columnCount="4"
        >
            <TextView
                    android:text="Course Name: "
                    android:layout_column="1"
                    android:layout_gravity="end"
            />
            <TextView
                    android:id="@+id/eCourseName"
                    android:hint="name of course"
                    android:layout_gravity="fill_horizontal"
            />
            <TextView
                    android:text="Start Date: "
                    android:layout_column="1"
                    android:id="@+id/cStartDate"
                    android:layout_gravity="end|center_vertical"
            />
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/eCourseStart"
                        android:hint="mm/dd/yy"
                />
                <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/alertCourseStart"
                        android:text="Alert"/>
            </LinearLayout>
            <TextView
                    android:text="End Date: "
                    android:layout_column="1"
                    android:layout_gravity="end|center_vertical"
            />
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/eCourseEnd"
                        android:hint="mm/dd/yy"
                />
                <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/alertCourseEnd"
                        android:text="Alert"/>
            </LinearLayout>
            <TextView
                    android:text="Status: "
                    android:layout_column="1"
                    android:layout_gravity="end"
            />
            <TextView
                    android:id="@+id/eStatus"
                    android:layout_gravity="fill_horizontal"/>
            <TextView
                    android:text="Instructor Name: "
                    android:layout_column="1"
                    android:layout_gravity="end"
            />
            <TextView
                    android:id="@+id/eInstructorName"
                    android:hint="course instructors name"
                    android:layout_gravity="fill_horizontal"
            />
            <TextView
                    android:text="Instructor Phone: "
                    android:layout_column="1"
                    android:layout_gravity="end"
            />
            <TextView
                    android:id="@+id/eInstructorPhone"
                    android:hint="course instructors phone #"
                    android:layout_gravity="fill_horizontal"
            />
            <TextView
                    android:text="Instructor Email: "
                    android:layout_column="1"
                    android:layout_gravity="end"
            />
            <TextView
                    android:id="@+id/eInstructorEmail"
                    android:hint="course instructors email"
                    android:layout_gravity="fill_horizontal"
            />
            <TextView
                    android:text="Course Notes: "
                    android:layout_column="1"
                    android:layout_gravity="end"
            />
            <TextView
                    android:id="@+id/eCourseNotes"
                    android:hint="important course info"
                    android:layout_gravity="fill_horizontal"
            />
        </GridLayout>
    </ScrollView>

</RelativeLayout>